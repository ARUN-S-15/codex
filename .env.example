# CODEX Environment Variables Template
# Copy this file to .env and fill in your values
# Generate SECRET_KEY: python -c "import os; print(os.urandom(24).hex())"

# Flask Secret Key (REQUIRED - Generate a secure random key!)
SECRET_KEY=your-secret-key-here

# MySQL Database Configuration
DB_TYPE=mysql
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=your_mysql_password_here
MYSQL_DATABASE=codex_db

# Judge0 API Configuration (optional)
JUDGE0_API_KEY=

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
