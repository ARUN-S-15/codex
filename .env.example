# CODEX Environment Variables Template
# Copy this file to .env and fill in your values
# Generate SECRET_KEY: python -c "import os; print(os.urandom(32).hex())"

# ===============================
# FLASK CONFIGURATION (REQUIRED)
# ===============================

# Flask Secret Key (REQUIRED - Generate a secure random key!)
# IMPORTANT: Use a permanent key! Don't let it regenerate on restart.
SECRET_KEY=your-secret-key-here-min-32-characters-long

# Flask Environment (development/production)
FLASK_ENV=development
FLASK_DEBUG=True

# ===============================
# DATABASE CONFIGURATION
# ===============================

# Database Type (mysql/sqlite)
DB_TYPE=mysql

# MySQL Configuration (if DB_TYPE=mysql)
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=your_mysql_password_here
MYSQL_DATABASE=codex_db

# ===============================
# JUDGE0 API CONFIGURATION
# ===============================

# Judge0 API URL (optional - defaults to public API)
JUDGE0_URL=http://localhost:2358
JUDGE0_API_KEY=

# ===============================
# SECURITY SETTINGS
# ===============================

# Session Cookie Settings (Production)
SESSION_COOKIE_SECURE=False  # Set to True in production with HTTPS
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Strict

# Rate Limiting (requests per time period)
RATE_LIMIT_ENABLED=True
RATE_LIMIT_DEFAULT=200 per day, 50 per hour
RATE_LIMIT_RUN_CODE=10 per minute

# ===============================
# OPTIONAL FEATURES
# ===============================

# Enable/Disable Features
ENABLE_HISTORY=True
ENABLE_DEBUG_MODE=True
ENABLE_OPTIMIZER=True

# Code Execution Limits
MAX_CODE_LENGTH=10000
MAX_EXECUTION_TIME=10
